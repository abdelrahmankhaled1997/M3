<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    tools:context="com.example.alhoda.nearbyplaces2.places">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/placeimage"
                android:layout_width="match_parent"

                android:layout_height="240dp"
                android:gravity="bottom"
                android:textColor="@color/colorPrimaryDark" />
           <!-- ely ana 7ato -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="0sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="3">


                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:text="Welcome"
                    android:textAlignment="center"
                    android:textColor="?attr/colorBackgroundFloating"
                    android:textSize="37sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleIndicator"
                       android:layout_marginTop="10sp"
                    android:layout_marginLeft="120sp"
                    android:paddingTop="29sp"
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />



            </LinearLayout>

          <!-- nehaye7t ely ana 7ato -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorGrass"

                    >

                    <ImageView
                        android:id="@+id/callusimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/callus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrassDark"
                        android:layout_marginTop="30dp"

                        android:padding="8dp"

                        android:text="Call us"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorBitterSweet"

                    >

                    <ImageView
                        android:id="@+id/reviewimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star_half_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/addreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginTop="30dp"

                        android:padding="8dp"
                        android:background="@color/colorBitterSweetDark"
                        android:text="Rate"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorLavander"
                    >

                    <ImageView
                        android:id="@+id/mapimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_place_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/showonmap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorLavanderDark"
                        android:layout_marginTop="30dp"
                        android:padding="8dp"
                        android:text="show on map"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>




            <!-- Second Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorMint"
                    >

                    <ImageView
                        android:id="@+id/showimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_comment_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/showreviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorMintDark"
                        android:layout_marginTop="30dp"
                        android:padding="8dp"
                        android:text="show reviews"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorFlower"
                    >

                    <ImageView
                        android:id="@+id/distanceimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_directions_car_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/distance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorFlowerDark"
                        android:layout_marginTop="30dp"

                        android:padding="8dp"

                        android:text="show distance"
                        android:textAlignment="center"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/colorPinkRose"
                    >

                    <ImageView
                        android:id="@+id/logoutimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_directions_run_black_24dp"
                        android:tint="@color/colorWhite"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginTop="30dp"
                        android:background="@color/colorPinkRoseDark"
                        android:padding="8dp"
                        android:text="Logout"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>
            <!-- End Second Row-->
            <!-- Third Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                >


            </LinearLayout>
            <!-- End Third Row-->

        </LinearLayout>

    </ScrollView>



</LinearLayout>